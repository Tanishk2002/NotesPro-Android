<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppLockScreenActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/appLockBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            style="@style/appLockIconColor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/lock_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Enter your PIN"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/applock_et_bg"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="55sp" />

            <EditText
                android:id="@+id/et1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/applock_et_bg"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="55sp" />

            <EditText
                android:id="@+id/et2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/applock_et_bg"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="55sp" />

            <EditText
                android:id="@+id/et3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/applock_et_bg"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="55sp" />

            <EditText
                android:id="@+id/et4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/applock_et_bg"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="55sp" />

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.cardview.widget.CardView
        style="@style/appLockCardBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-60dp"
        app:cardCornerRadius="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Forgot your PIN?"
                android:textColor="#B6B6B6"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btnReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Reset"
                android:textColor="@color/fab_bg_light"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn1"
                    style="@style/numButtonBg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/num_btn_bg"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn2"
                    style="@style/numButtonBg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="30dp"
                    android:background="@drawable/num_btn_bg"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn3"
                    style="@style/numButtonBg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/num_btn_bg"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn4"
                    style="@style/numButtonBg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/num_btn_bg"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn5"
                    style="@style/numButtonBg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="30dp"
                    android:background="@drawable/num_btn_bg"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn6"
                    style="@style/numButtonBg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/num_btn_bg"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn7"
                    style="@style/numButtonBg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/num_btn_bg"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn8"
                    style="@style/numButtonBg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="30dp"
                    android:background="@drawable/num_btn_bg"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn9"
                    style="@style/numButtonBg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/num_btn_bg"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="140dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnDel"
                    style="@style/numButtonBg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/num_btn_bg"
                    android:paddingLeft="16dp"
                    android:paddingRight="20dp"
                    android:src="@drawable/backspace_icon" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn0"
                    style="@style/numButtonBg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="30dp"
                    android:background="@drawable/num_btn_bg"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <ImageView
                    android:id="@+id/btnDone"
                    style="@style/numButtonBg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/num_btn_bg"
                    android:padding="15dp"
                    android:src="@drawable/done_icon" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>